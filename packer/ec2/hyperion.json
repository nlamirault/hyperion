{
    "variables": {
        "access_key": "",
        "secret_key": "",
        "account_id": "",
        "s3_bucket": "",
        "key_name": "",
        "ssh_public_key": "",
        "ssh_private_key_file": "",
        "ssh_user": "",
        "x509_cert_path": "",
        "x509_key_path": "",
        "source_ami": "ami-e31a6594",
        "instance_type": "t2.micro",
        "region": "eu-west-1",
        "kube_binaries": "https://storage.googleapis.com/portefaix/hyperion-0.8.1.tar.gz",
        "ami_name": "hyperion-0-8-0 {{timestamp}}",
        "ami_description": "Kubernetes Base Image for Hyperion"
    },
    "builders": [
        {
            "type": "amazon-instance",
            "access_key": "{{user `access_key`}}",
            "secret_key": "{{user `secret_key`}}",
            "account_id": "{{user `account_id`}}",
            "x509_key_path": "{{user `x509_key_path`}}",
            "x509_cert_path": "{{user `x509_key_path`}}",
            "s3_bucket": "{{user `s3_bucket`}}",
            "region": "{{user `region`}}",
            "source_ami": "{{user `source_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "ssh_username": "{{user `ssh_user`}}",
            "ami_name": "{{user `ami_name`}}",
            "ami_description": "{{user `ami_description`}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "../units",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "inline": [
                "sudo mkdir -p /opt/bin",
                "wget -N -O k8s.tar.gz {{user `kube_binaries`}}",
                "sudo tar -xvf k8s.tar.gz -C /opt/bin",
                "sudo chmod +x -R /opt/bin",
                "sudo chown root:root -R /opt/bin",
                "sudo mv /tmp/units/*.service /etc/systemd/system",
                "sudo ls /etc/systemd/system/",
                "rm -rf /tmp/units"
            ]
        }
    ]
}
