{
    "id": "monitoring",
    "kind": "Pod",
    "apiVersion": "v1beta1",
    "desiredState": {
        "manifest": {
            "version": "v1beta1",
            "id": "monitoring",
            "containers": [
                {
                    "name": "monitoring-metrics",
                    "image": "nlamirault/hyperion-monitoring-metrics",
                    "ports": [
                        {"containerPort": 8086, "hostPort": 8086},
                        {"containerPort": 8083, "hostPort": 8083},
                        {"containerPort": 8090, "hostPort": 8090},
                        {"containerPort": 8099, "hostPort": 8099}
                    ]
                }, {
                    "name": "monitoring-ui",
                    "image": "nlamirault/hyperion-monitoring-ui",
                    "ports": [
                        {"containerPort": 80, "hostPort": 80}
                    ],
                }]
        },
    },
    "labels": {
        "name": "hyperion-monitoring",
    }
}
